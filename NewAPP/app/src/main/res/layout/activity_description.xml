<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red"
    android:orientation="vertical"
    tools:context=".Description">

    <TextView
        android:id="@+id/bike_name"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Bicycle number : 01"
        android:textColor="#FF9E80"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/bike_image"
                android:layout_width="match_parent"
                android:layout_height="281dp"
                android:layout_marginTop="18dp"
                android:padding="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/bike"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.481"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#E7FD03"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewCarDetails" />

                <TextView
                    android:id="@+id/bike_price"
                    android:layout_width="161dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:text="Price"
                    android:textColor="#FF8A80"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewCarDetails" />
            </LinearLayout>

            <Button
                android:id="@+id/booking_0"
                android:layout_margin="20dp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Book" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Bicycle Deatils"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />


            </LinearLayout>

            <TextView
                android:id="@+id/bike_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="20dp"
                android:text="Deatils"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>